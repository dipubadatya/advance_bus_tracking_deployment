                                                    <label class="block text-sm font-medium text-slate-700 mb-1">Scheduled Time</label>
                                                    <div class="flex items-center">
                                                        <input type="time" name="stops[<%= i %>][scheduledTime]" value="<%= stop.scheduledTime %>" class="w-full text-sm p-2 bg-slate-50 border border-slate-300 rounded-md focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500" required>
                                                        <span class="time-diff text-xs font-medium text-slate-500 ml-2 whitespace-nowrap"></span>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <button type="button" class="remove-stop-btn text-slate-400 hover:text-red-600 hover:bg-red-50 p-2 rounded-full transition absolute top-3 right-3">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm4 0a1 1 0 012 0v6a1 1 0 11-2 0V8z" clip-rule="evenodd" /></svg>
                                            </button>
                                        </div>
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                        
                        <div id="empty-state" class="text-center py-16 text-slate-500 border-2 border-dashed border-slate-300 rounded-xl <%= bus && bus.stops.length > 0 ? 'hidden' : '' %>">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 mx-auto mb-3 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1"><path stroke-linecap="round" stroke-linejoin="round" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553-2.276A1 1 0 0021 16.382V5.618a1 1 0 00-1.447-.894L15 7m-6 3l6-3m0 0l-6-3m6 3v10" /></svg>
                            <p class="font-semibold">This route has no stops</p>
                            <p class="text-sm">Click "Add New Stop" to get started.</p>
                        </div>

                    </div>
                </div>

            </div>
        </form>
    </main>

    <script>
    document.addEventListener('DOMContentLoaded', () => {
        const stopsContainer = document.getElementById('stops-container');
        const addStopBtn = document.querySelector('.add-stop-btn');
        const emptyState = document.getElementById('empty-state');

        const toggleEmptyState = () => {
            const hasStops = stopsContainer.children.length > 0;
            emptyState.classList.toggle('hidden', hasStops);
        };

        const parseTime = (timeStr) => {
            if (!timeStr) return null;
            const [hours, minutes] = timeStr.split(':').map(Number);
            return hours * 60 + minutes;
        };

        const updateAllTimeDiffs = () => {
            const allStops = stopsContainer.querySelectorAll('.stop-entry');
            let prevTime = null;

            allStops.forEach((stop, index) => {
                const timeInput = stop.querySelector('input[type="time"]');
                const timeDiffEl = stop.querySelector('.time-diff');
                
                if (index === 0) {
                    timeDiffEl.textContent = '';
                    prevTime = parseTime(timeInput.value);
                    return;
                }
                
                const currentTime = parseTime(timeInput.value);
                if (prevTime !== null && currentTime !== null) {
                    const diff = currentTime - prevTime;
                    if (diff >= 0) {
                        timeDiffEl.textContent = `+${diff} min`;
                        timeDiffEl.classList.remove('text-red-500');
                        timeDiffEl.classList.add('text-slate-500');
                    } else {
                        timeDiffEl.textContent = `${diff} min`;
                        timeDiffEl.classList.add('text-red-500');
                        timeDiffEl.classList.remove('text-slate-500');
                    }
                } else {
                    timeDiffEl.textContent = '';
                }
                prevTime = currentTime;
            });
        };
        
        const reindexStops = () => {
            const allStops = stopsContainer.querySelectorAll('.stop-entry');
            allStops.forEach((stop, index) => {
                stop.querySelector('.stop-number').textContent = index + 1;
                stop.querySelectorAll('input').forEach(input => {
                    const name = input.getAttribute('name');
                    if (name) {
                        const newName = name.replace(/\[\d+\]/, `[${index}]`);
                        input.setAttribute('name', newName);
                    }
                });
            });
            updateAllTimeDiffs();
            toggleEmptyState();
        };

        const createStopElement = (index) => {
            const div = document.createElement('div');
            div.className = 'stop-entry p-4 rounded-xl border border-slate-200 relative timeline-item bg-white transition-shadow duration-200';
            div.innerHTML = `
                <div class="flex items-start gap-4">
                    <div class="drag-handle text-center text-slate-400 relative z-10 bg-white pt-1">
                        <div class="w-12 h-12 flex flex-col items-center justify-center rounded-full hover:bg-slate-100 transition-colors">
                            <span class="stop-number text-lg font-bold text-indigo-600">${index + 1}</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" /></svg>
                        </div>
                    </div>
                    <div class="flex-1 grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-4">
                        <div class="md:col-span-2">
                            <label class="block text-sm font-medium text-slate-700 mb-1">Stop Name</label>
                            <input type="text" name="stops[${index}][name]" placeholder="e.g., Central Park" class="w-full text-sm p-2 bg-slate-50 border border-slate-300 rounded-md focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500" required>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Coordinates (Lat, Lng)</label>
                            <div class="flex gap-2">
                                <input type="number" step="any" name="stops[${index}][lat]" placeholder="Latitude" class="w-full text-sm p-2 bg-slate-50 border border-slate-300 rounded-md focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500" required>
                                <input type="number" step="any" name="stops[${index}][lng]" placeholder="Longitude" class="w-full text-sm p-2 bg-slate-50 border border-slate-300 rounded-md focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500" required>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-slate-700 mb-1">Scheduled Time</label>
                            <div class="flex items-center">
                                <input type="time" name="stops[${index}][scheduledTime]" class="w-full text-sm p-2 bg-slate-50 border border-slate-300 rounded-md focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500" required>
                                <span class="time-diff text-xs font-medium text-slate-500 ml-2 whitespace-nowrap"></span>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="remove-stop-btn text-slate-400 hover:text-red-600 hover:bg-red-50 p-2 rounded-full transition absolute top-3 right-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm4 0a1 1 0 012 0v6a1 1 0 11-2 0V8z" clip-rule="evenodd" /></svg>
                    </button>
                </div>`;
            return div;
        };

        // --- Initialize SortableJS for Drag and Drop ---
        new Sortable(stopsContainer, {
            animation: 150,
            handle: '.drag-handle',
            ghostClass: 'sortable-ghost',
            chosenClass: 'sortable-chosen',
            onEnd: () => {
                reindexStops(); 
            },
        });

       
        addStopBtn.addEventListener('click', () => {
            const stopCount = stopsContainer.children.length;
            const newStop = createStopElement(stopCount);
            stopsContainer.appendChild(newStop);
            
            reindexStops();

           
            newStop.classList.add('animate-flash');
            newStop.scrollIntoView({ behavior: 'smooth', block: 'center' });
            newStop.querySelector('input[type="text"]').focus();
        });

        stopsContainer.addEventListener('click', (e) => {
            const removeBtn = e.target.closest('.remove-stop-btn');
            if (removeBtn) {
                removeBtn.closest('.stop-entry').remove();
                reindexStops();
            }
        });

        stopsContainer.addEventListener('change', (e) => {
            if (e.target.matches('input[type="time"]')) {
                updateAllTimeDiffs();
            }
        });

 
        toggleEmptyState();
        updateAllTimeDiffs();
    });
    </script>
</body>
</html>