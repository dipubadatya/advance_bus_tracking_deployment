<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Driver Dashboard â€¢ BusGo</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        brand: {
                            50: '#EEF2FF',
                            100: '#E0E7FF',
                            200: '#C7D2FE',
                            300: '#A5B4FC',
                            400: '#818CF8',
                            500: '#6366F1',
                            600: '#4F46E5',
                            700: '#4338CA',
                            800: '#3730A3',
                            900: '#312E81'
                        }
                    }
                }
            }
        }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap"
        rel="stylesheet" />

    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
        }

        .tracking-active {
            animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
        }

        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: .5;
            }
        }
    </style>
</head>

<body
    class="bg-gray-50 dark:bg-slate-900 text-slate-800 dark:text-slate-200 antialiased transition-colors duration-300">


    <div
        class="fixed inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#f4f4f5_1px,transparent_1px),linear-gradient(to_bottom,#f4f4f5_1px,transparent_1px)] bg-[size:6rem_4rem] dark:bg-slate-900 dark:bg-[linear-gradient(to_right,#1f2937_1px,transparent_1px),linear-gradient(to_bottom,#1f2937_1px,transparent_1px)]">
    </div>

    <!-- Header -->
    <header
        class="bg-white/80 dark:bg-slate-900/70 backdrop-blur-md shadow-sm sticky top-0 z-50 border-b border-gray-200/60 dark:border-slate-800">
        <div class="px-4 sm:px-6 lg:max-w-7xl lg:mx-auto">
            <div class="flex justify-between items-center h-14 sm:h-16">
                <!-- Brand -->
                <div class="flex items-center gap-3">
                    <div class="relative">
                        <i class="fas fa-bus text-brand-600 dark:text-indigo-400 text-xl sm:text-2xl"></i>
                        <span class="absolute -top-1 -right-1 flex h-3 w-3">
                            <span
                                class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
                            <span class="relative inline-flex rounded-full h-3 w-3 bg-orange-500"></span>
                        </span>
                    </div>
                    <a href="/" class="flex items-center gap-2">
                        <h1 class="text-lg sm:text-xl font-extrabold text-slate-900 dark:text-white tracking-tight">
                            BusGo</h1>
                    </a>
                </div>

                <!-- Actions -->
                <div class="flex items-center gap-2 sm:gap-3">
                    <a href="/"
                        class=" sm:inline-flex text-slate-700 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white font-medium px-3 py-2 rounded-lg hover:bg-slate-100/70 dark:hover:bg-slate-800 transition-all">
                        Routes
                    </a>

                  

                    <form action="/auth/logout" method="POST" class="inline">
                        <button type="submit"
                            class="inline-flex items-center gap-2 px-3 py-2 rounded-lg text-slate-700 dark:text-slate-300 hover:bg-red-50 dark:hover:bg-red-900/20 hover:text-red-700 dark:hover:text-red-300 transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                                stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round"
                                    d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                            </svg>
                            <span class="hidden sm:inline">Logout</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <main class="container mx-auto p-4 sm:p-6 lg:p-8 max-w-7xl">
        <% if (bus) { %>
          
            <div class="mb-6 sm:mb-8">
                <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight text-slate-900 dark:text-white">Driver
                    Dashboard</h2>
                <p class="text-slate-600 dark:text-slate-400 mt-1">Manage live tracking and route information.</p>
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

                <!-- Left: Bus card -->
                <aside class="lg:col-span-1">
                    <div
                        class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-gray-200/60 dark:border-slate-700 overflow-hidden">
                        <div class="relative">
                            <img src="<%= bus.imageUrl ||'https://i.pinimg.com/736x/cb/f3/3e/cbf33e82b301cc7e958fccf2f5abd318.jpg'  %>"
                                alt="Bus Image" class="w-full h-48 object-cover" />
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                            <div class="absolute bottom-0 left-0 p-5 text-white">
                                <p class="text-xl font-bold leading-tight">
                                    <%= bus.routeName %>
                                </p>
                                <p class="text-sm font-medium text-gray-200/90 mt-1">Bus No: <%= bus.busNumber %>
                                </p>
                            </div>
                        </div>

                        <div class="p-5 space-y-4">
                            <div class="grid grid-cols-2 gap-3">
                                <div
                                    class="rounded-xl p-3 bg-slate-50 dark:bg-slate-700/40 border border-slate-200/60 dark:border-slate-700">
                                    <p class="text-xs text-slate-500 dark:text-slate-400">Route</p>
                                    <p class="text-sm font-semibold text-slate-800 dark:text-slate-100 truncate">
                                        <%= bus.routeName %>
                                    </p>
                                </div>
                                <div
                                    class="rounded-xl p-3 bg-slate-50 dark:bg-slate-700/40 border border-slate-200/60 dark:border-slate-700">
                                    <p class="text-xs text-slate-500 dark:text-slate-400">Bus Number</p>
                                    <p class="text-sm font-semibold text-slate-800 dark:text-slate-100">
                                        <%= bus.busNumber %>
                                    </p>
                                </div>
                            </div>

                            <a href="/dashboard/bus/edit"
                                class="flex items-center justify-center gap-2 w-full bg-brand-50 dark:bg-slate-700 text-brand-700 dark:text-slate-200 font-semibold px-4 py-3 rounded-xl hover:bg-brand-100 dark:hover:bg-slate-600 transition-all">
                                <i class="fa-solid fa-pen-to-square"></i>
                                Edit Details
                            </a>
                        </div>
                    </div>
                </aside>

                <!-- Right: Live tracking -->
                <section class="lg:col-span-2">
                    <div
                        class="bg-white dark:bg-slate-800 rounded-2xl shadow-sm border border-gray-200/60 dark:border-slate-700 p-6 sm:p-7">
                        <div class="flex items-center justify-between mb-5">
                            <h3 class="text-xl sm:text-2xl font-bold text-slate-900 dark:text-white">Live Tracking</h3>
                            <div id="tracking-indicator" class="hidden">
                                <div class="flex items-center gap-2">
                                    <span class="h-2.5 w-2.5 bg-green-500 rounded-full tracking-active"></span>
                                    <span class="text-xs font-semibold text-green-600 dark:text-green-400">Active</span>
                                </div>
                            </div>
                        </div>

                        <!-- Status -->
                        <div id="status"
                            class="mb-6 p-4 sm:p-5 bg-gradient-to-r from-slate-50 to-slate-100 dark:from-slate-800/50 dark:to-slate-700/40 rounded-xl border border-slate-200/60 dark:border-slate-700">
                            <div class="flex items-start gap-3">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                    class="h-5 w-5 text-slate-400 dark:text-slate-500 mt-0.5" fill="none"
                                    viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round"
                                        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <p class="text-slate-700 dark:text-slate-300 font-medium">
                                    Status: Waiting for action...
                                </p>
                            </div>
                        </div>

                  
                        <!-- Actions -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <button id="start-tracking"
                                class="group relative overflow-hidden bg-gradient-to-r from-emerald-500 to-emerald-600 text-white px-5 py-4 rounded-xl font-semibold hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5 active:translate-y-0 disabled:from-gray-300 disabled:to-gray-400 dark:disabled:from-slate-700 dark:disabled:to-slate-700 dark:disabled:text-slate-400 disabled:cursor-not-allowed">
                                <div class="flex items-center justify-center gap-3">
                                    <i class="fa-solid fa-play"></i>
                                    <span>Start Tracking</span>
                                </div>
                                <span
                                    class="absolute inset-0 -translate-x-full group-hover:translate-x-0 bg-white/15 transition-transform duration-300"></span>
                            </button>

                            <button id="stop-tracking"
                                class="group relative overflow-hidden bg-gradient-to-r from-rose-500 to-rose-600 text-white px-5 py-4 rounded-xl font-semibold hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5 active:translate-y-0 disabled:from-gray-300 disabled:to-gray-400 dark:disabled:from-slate-700 dark:disabled:to-slate-700 dark:disabled:text-slate-400 disabled:cursor-not-allowed"
                                disabled>
                                <div class="flex items-center justify-center gap-3">
                                    <i class="fa-solid fa-stop"></i>
                                    <span>Stop Tracking</span>
                                </div>
                                <span
                                    class="absolute inset-0 -translate-x-full group-hover:translate-x-0 bg-white/15 transition-transform duration-300"></span>
                            </button>
                        </div>

                      
                        <div
                            class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl border border-blue-200/60 dark:border-blue-500/30">
                            <div class="flex items-start gap-3">
                                <i class="fa-solid fa-circle-info text-blue-600 dark:text-blue-400"></i>
                                <p class="text-sm text-blue-800/90 dark:text-blue-300">
                                    When tracking is active, your location will be shared in real-time with passengers
                                    on your route.
                                </p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
            <% } else { %>
               
                <div class="min-h-[70vh] flex items-center justify-center">
                    <div class="text-center max-w-md mx-auto">
                        <div class="mb-8">
                            <div
                                class="mx-auto h-32 w-32 bg-gradient-to-br from-brand-50 to-indigo-100 dark:from-brand-900/20 dark:to-indigo-900/20 rounded-full flex items-center justify-center">
                                <i class="fa-solid fa-road text-brand-600 dark:text-brand-400 text-4xl"></i>
                            </div>
                        </div>
                        <h2 class="text-3xl font-extrabold text-slate-900 dark:text-white mb-3">Welcome, Driver!</h2>
                        <p class="text-lg text-slate-600 dark:text-slate-400 mb-7">Add your bus details and route
                            information to begin live tracking.</p>
                        <a href="/dashboard/bus/edit"
                            class="inline-flex items-center gap-2 bg-gradient-to-r from-brand-600 to-indigo-600 text-white font-semibold px-7 py-4 rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5 active:translate-y-0">
                            <i class="fa-solid fa-plus"></i>
                            Add Bus Details
                        </a>
                    </div>
                </div>
                <% } %>
    </main>

    <% if (bus) { %>
      
        <div
            class="fixed bottom-0 left-0 right-0 bg-white/90 dark:bg-slate-900/80 backdrop-blur-md border-t border-gray-200 dark:border-slate-800 px-4 py-3 sm:hidden">
            <div class="grid grid-cols-2 gap-3">
                <button id="mobile-start-tracking"
                    class="bg-emerald-600 text-white px-4 py-3 rounded-xl font-semibold flex items-center justify-center gap-2 active:scale-95 transition-transform disabled:bg-slate-400 disabled:cursor-not-allowed">
                    <i class="fa-solid fa-play"></i>
                    Start
                </button>
                <button id="mobile-stop-tracking"
                    class="bg-rose-600 text-white px-4 py-3 rounded-xl font-semibold flex items-center justify-center gap-2 active:scale-95 transition-transform disabled:bg-slate-400 disabled:cursor-not-allowed"
                    disabled>
                    <i class="fa-solid fa-stop"></i>
                    Stop
                </button>
            </div>
        </div>
        <% } %>

    
            <script>
            
                const root = document.documentElement;
                const darkToggle = document.getElementById('dark-toggle');
                const storedTheme = localStorage.getItem('theme');

                if (storedTheme === 'dark' || (!storedTheme && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                    root.classList.add('dark');
                } else {
                    root.classList.remove('dark');
                }
                if (darkToggle) {
                    darkToggle.addEventListener('click', () => {
                        root.classList.toggle('dark');
                        localStorage.setItem('theme', root.classList.contains('dark') ? 'dark' : 'light');
                    });
                }

            </script>
            <script>
                const busId = "<%= bus ? bus._id : '' %>";

                document.addEventListener('DOMContentLoaded', function () {
                    const startBtn = document.getElementById('start-tracking');
                    const stopBtn = document.getElementById('stop-tracking');
                    const mobileStartBtn = document.getElementById('mobile-start-tracking');
                    const mobileStopBtn = document.getElementById('mobile-stop-tracking');
                    const trackingIndicator = document.getElementById('tracking-indicator');

                    if (mobileStartBtn && mobileStopBtn) {
                        mobileStartBtn.addEventListener('click', () => startBtn.click());
                        mobileStopBtn.addEventListener('click', () => stopBtn.click());

                        const observer = new MutationObserver(() => {
                            mobileStartBtn.disabled = startBtn.disabled;
                            mobileStopBtn.disabled = stopBtn.disabled;

                            mobileStartBtn.classList.toggle('bg-gray-300', startBtn.disabled);
                            mobileStartBtn.classList.toggle('bg-green-500', !startBtn.disabled);
                            mobileStopBtn.classList.toggle('bg-gray-300', stopBtn.disabled);
                            mobileStopBtn.classList.toggle('bg-red-500', !stopBtn.disabled);

                            trackingIndicator.classList.toggle('hidden', !startBtn.disabled || stopBtn.disabled);
                        });

                        observer.observe(startBtn, { attributes: true, attributeFilter: ['disabled'] });
                        observer.observe(stopBtn, { attributes: true, attributeFilter: ['disabled'] });
                    }

                    const statusElement = document.getElementById('status');
                    window.updateStatus = function (message, type) {
                        statusElement.className = 'mb-8 p-6 rounded-xl border';
                        let iconHtml = '';
                        let textColor = '';

                        if (type === 'success' || message.includes('started')) {
                            statusElement.className += ' bg-gradient-to-r from-green-50 to-emerald-50 border-green-200/50';
                            iconHtml = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`;
                            textColor = 'text-green-700';
                        } else if (type === 'error' || message.includes('Error')) {
                            statusElement.className += ' bg-gradient-to-r from-red-50 to-rose-50 border-red-200/50';
                            iconHtml = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`;
                            textColor = 'text-red-700';
                        } else {
                            statusElement.className += ' bg-gradient-to-r from-gray-50 to-gray-100 border-gray-200/50';
                            iconHtml = `<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`;
                            textColor = 'text-gray-600';
                        }
                        statusElement.innerHTML = `<div class="flex items-center gap-3">${iconHtml}<p class="${textColor} font-medium">${message}</p></div>`;
                    };
                });
            </script>
            <script src="/socket.io/socket.io.js"></script>
            <script src="/js/driver.js"></script>
</body>

</html>